.Teaser.u-pl-1.u-pr-1
  %h1.Teaser-headline.u-ta-center.u-c-petrol.u-mh-Auto.u-ff-didot
    = "Unsere Hideaways in Bayern"
  .Teaser-wrapItems.u-flex.u-flexWrap--row
    - data.frontpage.kooperation_teaser.each_with_index do | item, index | 
      .Teaser--m
        .Teaser-wrapContent.u-flex.u-flexWrap--row
          .Teaser-image{:style => "background-image: url(../images/teaser/#{item.image}.jpg)"}
            %a.Teaser-favoriten.favorite{:style => "background-image: url(../images/icons/favorite.svg)"}
          .Teaser-wrapDescription.u-flex
            .Teaser-description.u-bg-lightGrey
              .Teaser-infos.u-flex
                .Teaser-left.u-width1of2
                  .Teaser-title.u-ff-didot.u-c-petrol
                    = "#{item.title}"
                  .Teaser-region.u-ff-lato.u-fw-light.u-c-petrol.u-transform-up
                    = "#{item.region}"              
                .Teaser-right.u-width1of2
                  .Teaser-price.u-ff-lato.u-fw-light.u-c-petrol
                    = "ab #{item.price} € / Nacht"
              .Teaser-text.u-ff-lato.u-fw-light.u-c-petrol
                = "#{item.description}"
            .Teaser-index
              %img(src="/images/index.svg")
              .Teaser-wrapPercent
                .index-info
                  %a{:href => "https://google.com"}
                    %img.info-icon(src="/images/icons/info.svg")
                .index-count.u-ff-didot.u-ta-center
                  = "#{item.percent}%"
  .Button.Button--teaser.u-ff-lato.u-bg-lightGrey.u-ta-center.u-transform-up.u-c-petrol.u-mh-Auto
    = "entdecke mehr"


